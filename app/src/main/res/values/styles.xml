<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="FontTheme" parent="ThemeOverlay.AppCompat.Light">

        <item name="android:fontFamily">@font/aleobold</item>
    </style>


    <style name="ToolbarFontTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/aleobold</item>
    </style>


    <style name="SplashTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimaryDark">@color/colorAccent</item>
    </style>


</resources>
